<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ewaglosmobile">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".IndexActivity"
            android:configChanges="orientation">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SectionsActivity" android:configChanges="orientation"/>
        <activity android:name=".SubsectionsActivity" android:configChanges="orientation"/>
        <activity android:name=".WordsActivity" android:configChanges="orientation"/>
        <activity android:name=".WordActivity" android:configChanges="orientation"/>
        <activity android:name=".SearchActivity" android:configChanges="orientation"/>
        <activity android:name=".AboutActivity" android:configChanges="orientation"/>
    </application>

</manifest>